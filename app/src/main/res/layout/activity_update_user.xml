<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f3f8"
    tools:context=".UpdateUser">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="405dp"
        android:layout_height="86dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="625dp"
        android:background="#ffa0d2"
        android:focusable="auto"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="429dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/this_our_logo_for_app"
            app:srcCompat="@drawable/logoapp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="488dp"
            android:layout_height="51dp"
            android:layout_marginTop="23sp"
            android:layout_weight="1"
            android:fontFamily="@font/berkshire_swash"
            android:shadowColor="#494646"
            android:text="@string/the_dating_app"
            android:textColor="#45454d"
            android:textSize="27sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="626dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="170dp"
            android:layout_height="53dp"
            android:layout_marginStart="130sp"
            android:layout_marginLeft="130sp"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/belgrano"
            android:text="@string/update_user"
            android:textColor="#45454d"
            android:textSize="25sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="384dp"
            android:layout_height="399dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="10sp"
            app:cardBackgroundColor="#ffa0d2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffa0d2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/updateID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:autofillHints=""
                    android:ems="10"
                    android:fontFamily="@font/belgrano"
                    android:hint="@string/hintUpdateID"
                    android:inputType="textPersonName"
                    android:textColor="#45454d" />

                <EditText
                    android:id="@+id/updateName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:autofillHints=""
                    android:ems="10"
                    android:fontFamily="@font/belgrano"
                    android:hint="@string/hintUpdateName"
                    android:inputType="textPersonName"
                    android:textColor="#45454d" />

                <EditText
                    android:id="@+id/updateAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:autofillHints=""
                    android:ems="10"
                    android:fontFamily="@font/belgrano"
                    android:hint="@string/hintUpdateAge"
                    android:inputType="textPersonName"
                    android:textColor="#45454d" />

                <EditText
                    android:id="@+id/updateGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:autofillHints=""
                    android:ems="10"
                    android:fontFamily="@font/belgrano"
                    android:hint="@string/hintUpdateGender"
                    android:inputType="textPersonName"
                    android:textColor="#45454D" />

                <EditText
                    android:id="@+id/updateArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:autofillHints=""
                    android:ems="10"
                    android:fontFamily="@font/belgrano"
                    android:hint="@string/hintUpdateArea"
                    android:inputType="textPersonName"
                    android:textColor="#45454d" />

                <EditText
                    android:id="@+id/updatePW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginBottom="10sp"
                    android:autofillHints=""
                    android:ems="10"
                    android:fontFamily="@font/belgrano"
                    android:hint="@string/hintUpdatePW"
                    android:inputType="textPersonName"
                    android:textColor="#45454d" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="141dp"
            android:layout_height="80dp"
            android:layout_marginStart="250sp"
            android:layout_marginLeft="250sp"
            android:layout_marginTop="20sp"
            app:cardBackgroundColor="#ffa0d2"
            app:cardCornerRadius="15dp">

            <Button
                android:id="@+id/button13"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="16sp"
                android:background="@drawable/button_back"
                android:fontFamily="@font/belgrano"
                android:text="@string/update"
                android:textColor="#45454d" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>