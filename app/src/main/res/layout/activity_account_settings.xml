<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F3F8"
    tools:context=".AccountSettings">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="405dp"
        android:layout_height="86dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="625dp"
        android:background="#ffa0d2"
        android:focusable="auto"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="429dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/this_our_logo_for_app"
            app:srcCompat="@drawable/logoapp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="488dp"
            android:layout_height="51dp"
            android:layout_marginTop="23sp"
            android:layout_weight="1"
            android:fontFamily="@font/berkshire_swash"
            android:shadowColor="#494646"
            android:text="@string/the_dating_app"
            android:textColor="#5542AA"
            android:textSize="27sp"
            android:textStyle="normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:fontFamily="@font/belgrano"
        android:text="@string/account_settings"
        android:textColor="#45454D"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.024" />

    <ScrollView
        android:layout_width="421dp"
        android:layout_height="555dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:fontFamily="@font/belgrano"
                android:text="@string/user_name"
                android:textColor="#45454D"
                android:textSize="18sp"
                android:layout_marginStart="10sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                app:cardBackgroundColor="#ffa0d2"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextForName"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/belgrano"
                        android:hint="@string/my_name"
                        android:inputType="textPersonName"
                        android:text="@string/name"
                        android:importantForAutofill="no"
                        android:layout_marginStart="10sp" />

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="1sp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_back"
                        android:fontFamily="@font/belgrano"
                        android:text="@string/change"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="10sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:fontFamily="@font/belgrano"
                android:text="@string/user_age"
                android:textColor="#45454D"
                android:textSize="18sp"
                android:layout_marginStart="10sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                app:cardBackgroundColor="#ffa0d2"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextForAge"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/belgrano"
                        android:hint="@string/my_age"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:text="@string/name"
                        android:layout_marginStart="10sp" />

                    <Button
                        android:id="@+id/button12"
                        android:layout_width="1sp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_back"
                        android:fontFamily="@font/belgrano"
                        android:text="@string/change"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="10sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:fontFamily="@font/belgrano"
                android:text="@string/user_gender"
                android:textColor="#45454D"
                android:textSize="18sp"
                android:layout_marginStart="10sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                app:cardBackgroundColor="#ffa0d2"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextForGender"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/belgrano"
                        android:hint="@string/my_gender"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:text="@string/name"
                        android:layout_marginStart="10sp" />

                    <Button
                        android:id="@+id/button13"
                        android:layout_width="1sp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_back"
                        android:fontFamily="@font/belgrano"
                        android:text="@string/change"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="10sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:fontFamily="@font/belgrano"
                android:text="@string/user_province"
                android:textColor="#45454D"
                android:textSize="18sp"
                android:layout_marginStart="10sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                app:cardBackgroundColor="#ffa0d2"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextForArea"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/belgrano"
                        android:hint="@string/my_province"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:text="@string/name" />

                    <Button
                        android:id="@+id/button14"
                        android:layout_width="1sp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_back"
                        android:fontFamily="@font/belgrano"
                        android:text="@string/change"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="10sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:fontFamily="@font/belgrano"
                android:text="@string/user_password"
                android:textColor="#45454D"
                android:textSize="18sp"
                android:layout_marginStart="10sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                app:cardBackgroundColor="#ffa0d2"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editTextTextPersonName"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="20sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="@font/belgrano"
                        android:hint="@string/my_password"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:text="@string/name" />

                    <Button
                        android:id="@+id/button15"
                        android:layout_width="1sp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:hint=""
                        android:background="@drawable/button_back"
                        android:fontFamily="@font/belgrano"
                        android:text="@string/change"
                        android:layout_marginStart="20sp"
                        android:layout_marginEnd="10sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewInvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:fontFamily="@font/belgrano"
                android:text="@string/invite_your_friends"
                android:textColor="#45454D"
                android:textSize="18sp"
                android:layout_marginStart="10sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                app:cardBackgroundColor="#ffa0d2"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="226dp"
                        android:layout_height="61dp"
                        android:layout_marginTop="17sp"
                        android:layout_weight="1"
                        android:contentDescription="@string/contactimage"
                        app:srcCompat="@drawable/duka1" />

                    <Button
                        android:id="@+id/button16"
                        android:layout_width="87dp"
                        android:layout_height="38dp"
                        android:layout_marginTop="22sp"
                        android:layout_marginRight="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_back"
                        android:fontFamily="@font/belgrano"
                        android:text="@string/contact"
                        android:layout_marginEnd="10sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="20sp"
                app:cardBackgroundColor="#ffa0d2"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/button17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80sp"
                        android:layout_marginLeft="80sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginBottom="5sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_back"
                        android:fontFamily="@font/belgrano"
                        android:text="@string/contact_us"
                        android:textColor="#45454D" />

                    <Button
                        android:id="@+id/button18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80sp"
                        android:layout_marginLeft="80sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="20sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_back"
                        android:fontFamily="@font/belgrano"
                        android:text="@string/logout"
                        android:textColor="#45454D" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>