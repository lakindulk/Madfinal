        app:layout_constraintTop_toBottomOf="@+id/tvName3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnAddMethod"
        android:layout_width="335dp"
        android:layout_height="55dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/radient_btn"
        android:fontFamily="@font/cherrycreamsoda"
        android:text="@string/K_BtnAddMethod"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCard3" />

    <Button
        android:id="@+id/btnEditMethod"
        android:layout_width="335dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/radient_btn"
        android:fontFamily="@font/cherrycreamsoda"
        android:text="@string/K_BtnEditMethod"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
