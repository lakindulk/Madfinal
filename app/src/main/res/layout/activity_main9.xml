        app:layout_constraintTop_toBottomOf="@+id/tvCard2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvCard3"
        android:layout_width="0dp"
        android:layout_height="30dp"
